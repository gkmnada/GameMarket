{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": "https://localhost:5001",
  "ReverseProxy": {
    "Routes": {
      "GamesRead": {
        "ClusterId": "games",
        "Match": {
          "Path": "/games/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/games/{**catch-all}"
          }
        ]
      },
      "GamesWrite": {
        "ClusterId": "games",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/games/{**catch-all}",
          "Methods": [ "POST", "PUT", "DELETE" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/games/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "games": {
        "Destinations": {
          "gameApi": {
            "Address": "https://localhost:7125"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "https://localhost:7126"
          }
        }
      },
      "filter": {
        "Destinations": {
          "filterApi": {
            "Address": "https://localhost:7127"
          }
        }
      },
      "basket": {
        "Destinations": {
          "basketApi": {
            "Address": "https://localhost:7128"
          }
        }
      },
      "order": {
        "Destinations": {
          "orderApi": {
            "Address": "https://localhost:7129"
          }
        }
      },
      "discount": {
        "Destinations": {
          "discountApi": {
            "Address": "https://localhost:7130"
          }
        }
      }
    }
  }
}
